{
  "$schema": "https://opencode.ai/config.json",
  "tui": {
    "scroll_acceleration": { "enabled": true }
  },
  "mcp": {
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"]
    }
  },
  "default_agent": "plan",
  "agent": {
    "plan": {
      "model": "anthropic/claude-opus-4-6",
      "variant": "high"
    },
    "build": {
      "model": "anthropic/claude-sonnet-4-6"
    }
  }
}
